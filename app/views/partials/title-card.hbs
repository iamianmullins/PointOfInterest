<div class="uk-width-2-3@m  uk-card uk-card-default uk-padding-small uk-visible@m">
    <div class="uk-grid">
        <div class="uk-width-1-6@m">
            <i class="fa fa-map-signs fa-3x" aria-hidden="true"></i>
        </div>
        <div class="uk-width-expand@m uk-text-left">
            <div class="title">
                {{title}}
            </div>
            <div class="uk-text-muted uk-text-small">
                {{subTitle}}
            </div>
        </div>
        <div class="uk-card uk-card-small uk-text-center uk-padding-remove">
            <a target="”_blank”" href="https://github.com/mullins1989/PointOfInterest">
                <div>
                    <i class="fas fa-map fa-3x" style="color:rgb(0, 165, 0)" title="Source repo" pos="bottom" uk-tooltip></i>
                </div>
                <div class="uk-width-expand@m uk-text-left">
                    <div class="uk-text-muted uk-text-center" style="font-size:xx-small">POI - Islands of Ireland</div>
                </div>
            </a>
        </div>
    </div>
</div>