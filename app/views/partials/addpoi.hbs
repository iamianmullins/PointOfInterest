<div class="uk-margin uk-width-1-1 uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
    <form class="uk-form-stacked uk-text-left" action="/newpoi" method="POST">
        <div class="uk-grid uk-grid-stack">
            <div class="uk-width-1-1">
                <div class="uk-margin">
                    <label class="uk-form-label" for="form-stacked-text">Enter Point Name</label>
                    <div class="uk-form-controls">
                        <div class="uk-inline">
                            <span class="uk-form-icon" uk-icon="icon: location"></span>
                            <input class="uk-input" id="form-stacked-text" type="text" name="poiname" placeholder="Point name" />
                        </div>
                    </div>
                </div>
                <div class="uk-width-1-1">
                    <div class="uk-form-label">Category</div>

                    <div class="uk-form-controls ">
                        <label><input class="uk-radio" type="radio" name="category" value="South East" /> South East </label>
                        <label><input class="uk-radio" type="radio" name="category" value="South West" /> South West </label>
                        <label><input class="uk-radio" type="radio" name="category" value="North East" /> North East </label>
                        <label><input class="uk-radio" type="radio" name="category" value="North West" /> North West </label>
                    </div>
                </div>
                <div class="uk-margin uk-width-1-1">
                    <label class="uk-form-label" for="form-stacked-text">Enter Point description</label>
                    <div class="uk-form-controls">
                        <div class="uk-inline">
                            <span class="uk-form-icon" uk-icon="icon: comment"></span>
                            <input class="uk-input uk-width-1-1" id="form-stacked-text" type="text" name="description" placeholder="Point Description" />
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="uk-width-1-1 uk-margin-small-top">
            <div class="uk-margin">
                <button class="submit uk-button uk-button-primary uk-button-large uk-width-1-1">Add Point</button>
            </div>
        </div>
    </form>
</div>